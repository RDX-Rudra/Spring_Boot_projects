<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="newDataProvider" class="car.example.ioc.NewDataProvider"/>
    <bean id="webDataProvider" class="car.example.ioc.WebServiceProvider"/>

    <bean id="userManagerWithNewDataProvider" class="car.example.ioc.UserManager">
        <constructor-arg ref="newDataProvider"/>
    </bean>
    <bean id="userManagerWithWebProvider" class="car.example.ioc.UserManager">
        <constructor-arg ref="webDataProvider"/>
    </bean>
</beans>